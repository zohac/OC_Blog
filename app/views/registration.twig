{% extends 'base.html.twig' %}

{% block content %}
<main role="main-inner-wrapper" class="container">
    <div class="row">
        <section class="col-xs-12 col-sm-6 col-md-6 col-lg-6 ">
            <article role="pge-title-content">
                <header>
                    <h2><span>Inscription</span></h2>
                </header>
            </article>
        </section>
        <div class="clearfix"></div>

        <div class="thumbnails-pan">
            <div class="contat-from-wrapper">
                <div id="message" class="row col-md-offset-3 col-md-6 col-lg-6 col-sm-6 col-xs-12">
					{% if errorRegistration %}<div class="error_message">{{ errorRegistration }}</div>{% endif %}
                    {% if errorEmail %}<div class="error_message">{{ errorEmail }}</div>{% endif %}
                    {% if errorPassword %}<div class="error_message">{{ errorPassword }}</div>{% endif %}
                    {% if errorLogin %}<div class="error_message">{{ errorLogin }}</div>{% endif %}
                </div>
                <form method="post" action="/registration" name="cform" id="cform">
                    <div class="row col-md-offset-3 col-md-6 col-lg-6 col-sm-6 col-xs-12">
						<div class="row">
                            <div class="col-xs-12">
                                <input  name="pseudo" id="pseudo" type="text"  placeholder="Votre nom" required>
                            </div>
                        </div>
                        <div class="space"></div>
                        <div class="row">
                            <div class="col-xs-12">
                                <input  name="email" id="email" type="email"  placeholder="Votre email" required>
                            </div>
                        </div>
                        <div class="space"></div>
                        <div class="row">
                            <div class="col-xs-12">
                                <input  name="password" id="password" type="password" placeholder="Votre mot de passe" required title="6 caracteres minimum" pattern=".{6,}">
                            </div>
                        </div>
                        <div class="space"></div>
                        <div class="row">
                            <div class="col-xs-12">
                                <input  name="password2" id="password2" type="password" placeholder="Retaper votre mot de passe" required title="6 caracteres minimum" pattern=".{6,}">
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <input name="" type="submit" value="Envoyer">
                    <div id="simple-msg"></div>
                </form>
            </div>
        </div>
    </div>
</main>
{% endblock %}
